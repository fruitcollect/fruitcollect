<!doctype html>
<html>
   <head>
      <meta charset="utf-8">
      <meta http-equiv="x-ua-compatible" content="ie=edge">
      <meta name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no, maximum-scale=1.0, user-scalable=no">
      <!-- Use the title from a page's frontmatter if it has one -->
      <title><%= current_page.data.title || "FruitCollect" %></title>
      <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "FruitCollect" %>">
      <%= stylesheet_link_tag "site" %>
      <%= favicon_tag 'favicon.png' %>
      <% if current_page.data.extra_css %>
         <%= stylesheet_link_tag current_page.data.extra_css %>
      <% end %>
   </head>
   <body class="home">
      <div id="fb-root"></div>
      <%= javascript_include_tag 'sdk', 'data-turbolinks-track' => 'reload' %>
      <header class="site-header">
         <%= partial "navigation" %>
      </header>
      <%#= render 'layouts/messages' %>
      <div class="page-header">
         <div class="container">
            <div class="row">

               <!-- MAIN IMAGE -->

            </div>
         </div>
      </div>
      <!-- End Hero Slider -->
      <div class="double-border"></div>
      <!-- Start Lead Block -->
      <div class="lead-block">
         <div class="container">

            <%= yield %>

         </div>
      </div>

      <%= partial "footer" %>

      <a id="back-to-top"><i class="fa fa-angle-double-up"></i></a>
      <%= javascript_include_tag "site" %>
      <% if current_page.data.extra_js %>
         <% for js_script in current_page.data.extra_js %>
            <%= javascript_include_tag js_script %>
         <% end %>
      <% end %>
   </body>
</html>
